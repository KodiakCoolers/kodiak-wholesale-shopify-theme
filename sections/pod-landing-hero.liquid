<section class="w-full py-12 md:py-24 lg:py-32">
  <div class="container px-4 md:px-6">
    <div class="grid gap-6 lg:grid-cols-2 lg:gap-12 items-center">
      <div class="flex flex-col gap-4">
        <h1 class="text-4xl font-black tracking-tighter sm:text-5xl md:text-6xl lg:text-7xl">
          {{ section.settings.heading }}
        </h1>
        <ul class="space-y-4 text-gray-600">
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-[#4CAF50] flex-shrink-0" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span>{{ block.settings.text }}</span>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
        <div class="flex flex-col sm:flex-row gap-4 mt-8">
          <a href="{{ section.settings.primary_button_link }}" class="inline-flex items-center justify-center rounded-md bg-[#e44e4e] px-8 py-3 text-sm font-medium text-white hover:bg-[#e44e4e]/90">
            <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M21 15V19C21 19.5304 20.7893 20.0391 20.4142 20.4142C20.0391 20.7893 19.5304 21 19 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M7 10L12 15L17 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M12 15V3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            {{ section.settings.primary_button_text }}
          </a>
          <a href="{{ section.settings.secondary_button_link }}" class="inline-flex items-center justify-center rounded-md border border-gray-200 px-8 py-3 text-sm font-medium hover:bg-gray-50">
            {{ section.settings.secondary_button_text }}
            <svg class="w-5 h-5 ml-2" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5 12H19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M12 5L19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </div>
        <div class="mt-6">
          <a href="https://apps.shopify.com/kodiak-print-on-demand/reviews" target="_blank" class="inline-flex flex-col hover:opacity-90 transition-opacity">
            <img src="{{ 'shopify-logo.svg' | asset_url }}" alt="Shopify" class="h-10 w-auto">
            <div class="flex items-center mt-2">
              {% for i in (1..5) %}
                <svg class="w-5 h-5 text-[#00B67A] fill-current mr-1" viewBox="0 0 24 24">
                  <path d="M12 17.27L18.18 21L16.54 13.97L22 9.24L14.81 8.63L12 2L9.19 8.63L2 9.24L7.46 13.97L5.82 21L12 17.27Z"/>
                </svg>
              {% endfor %}
              <span class="ml-2 font-medium">4.8 / 5</span>
            </div>
            <span class="mt-1 text-sm text-gray-500">based on 1169 reviews</span>
          </a>
        </div>
      </div>
      <div class="relative mt-8 lg:mt-0">
        <div class="relative">
          <img 
            src="{{ section.settings.hero_image | img_url: 'master' }}"
            alt="{{ section.settings.hero_image.alt }}"
            class="rounded-lg shadow-xl w-full"
            loading="eager"
          >
          <div class="absolute -bottom-4 -right-4 bg-[#4CAF50]/10 text-[#4CAF50] px-4 py-2 rounded-lg font-semibold">
            {{ section.settings.rating_text }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "POD Landing Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Best Print on Demand Tumblers for Your Shopify Store"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "rating_text",
      "label": "Rating Text",
      "default": "4.9/5 Rating"
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Download on Shopify App Store"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Feature Text",
          "default": "Add Custom Laser-Engraved Drinkware to Your Store in Minutes"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Landing Hero",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        }
      ]
    }
  ]
}
{% endschema %}