<section class="main_help_center">
  <div class="container kodiak_help_center">
    <div class="row helping_center">
          <div class="new_headers">
            <h1 class="headings_help">{{ section.settings.heading }}</h1>
            <p class="new_sect_help">{{ section.settings.content1 }}</p>
          </div>

            {% for block in section.blocks %}
        {% if block.type == 'Image' %}
          <div class="col-md-6 help_center">
            <div class="content-quality">
              <div class="help_img">
                  <div class="only_img">
                <img src="{{ block.settings.image | img_url:'master' }}">
                  </div>

                     <div class="second_help">
                  <button class="head_cont">{{ block.settings.heading1 }}</button>

           
                  <div class="content_panel">
                    <p>
                      {{ block.settings.content }}
                    </p>
                  </div>
                     </div>
                {% if block.settings.bt_text != blank %}
      <div class="help_btn_res">
        <a href="{{ block.settings.link }}">{{ block.settings.bt_text }}</a>
      </div>
    {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
              {% endfor %}

    </div>
  </div>
</section>



  
{% schema %}
  {
    "name": "Help center",
    "settings": [
  {
    "type" : "text",
    "id" : "heading",
    "label" : "Heading"
         },
        {
    "type" : "text",
    "id" : "content1",
    "label" : "Add Content Head"
         }
    ],
 "blocks":[
        {
         "name": "Image",
      "type": "Image",
      "settings": [
         {
    "type" : "image_picker",
    "id" : "image",
    "label" : "Hero Image"
         },
          {
    "type" : "text",
    "id" : "heading1",
    "label" : "Add Heading"
         },
        {
    "type" : "text",
    "id" : "content",
    "label" : "Add Content"
         },
        {
          "type":"url",
          "id":"link",
          "label":"Add button link"
        },
        {
          "type":"text",
          "id":"bt_text",
          "label":"Add button text"
        }
      ]
        }
  ],  
    "presets":[
      {
        "name":"help center"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
