{% comment %}
  Snippet can be used in section or block
  eg. {% include 'include-contact-form' %}
{% endcomment %}

{% comment %}Assign object as block or section{% endcomment %}
{% if type == 'block' %}
  {% assign object = block %}
{% else %}
  {% assign object = section %}
{% endif %}

{% assign id = object.id %}

{% assign contact_heading = object.settings.contact_heading %}
{% assign contact_subheading = object.settings.contact_subheading %}
{% assign contact_content = object.settings.contact_content %}
{% assign contact_text_position = object.settings.contact_text_position %}
{% assign contact_text_alignment = object.settings.contact_text_alignment %}

{% if context == 'contact-template' %}
  {% assign contact_content = page.content %}
  {% assign bottom_form_content = object.settings.contact_text %}
  {% assign contact_text_position = 'center' %}
  {% assign contact_text_alignment = 'left' %}
{% endif %}

<section class="section auto-section">
  {% unless context == 'contact-template' %}
    {% if contact_heading != blank %}
      <div class="contact-form__heading">
        <h2 class="title center">
          {{ contact_heading }}
        </h2>
        <div class="feature-divider"></div>
      </div>
    {% endif %}
  {% endunless %}
<div class="to_hieght">
  <div class="container contact-form concat contact-form-container contact-form__position--{{ contact_text_position }}" style="border-radius:20px!important;">
    <div class="five-eighths columns medium-down--one-whole">
      <div class="{% if contact_text_alignment == "center" %}center{% elsif contact_text_alignment == "right" %}align_right{% endif %}">
        {% unless context == 'contact-template' %}
          {% if contact_subheading != blank %}
            <div class="contact-form__subheading">
              <h3>{{ contact_subheading }}</h3>
            </div>
          {% endif %}
        {% endunless %}

        {% if contact_content != blank %}
          <div class="contact-form__content rte">
            {{ contact_content }}
          </div>
        {% endif %}
      </div>
    </div>
    {% if section.settings.row_image %}
     <div class="row row_image">
    <img src="{{ section.settings.row_image | img_url:'master'}}">
  </div>
    {% endif %}
<div class="row columns-row">
 
    <div class="col-md-8 five-eighths columns medium-down--one-whole">
   
      {% form 'contact', id: "form-contact", class: 'is-flex is-flex-wrap' %}
        {% if form.posted_successfully? %}
          <div class="contact__form-success">
            <p class="quote">
              {{ 'contact.form.post_success' | t }}
            </p>
          </div>
        {% endif %}

        {% if form.errors %}
          <div class="contact__form-errors">
            <p class="quote">{{ 'general.forms.post_error' | t }}</p>

            {%- assign message = 'contact.form.message' | t -%}

            <ul class="center">
              {% for field in form.errors %}
                {% if field == 'form' %}
                  <li>{{ form.errors.messages[field] }}</li>
                {% else %}
                  <li>
                    {%- assign field_name = field | replace: 'body', message -%}
                    {{ 'general.forms.post_field_error' | t: field: field_name, error: form.errors.messages[field] }}
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        {% endif %}

            <h1 class="col-heading">GET IN TOUCH</h1>
            <p class="ko-para">
            <span>Have questions about a product, your order or the website?</span>
              <p style="letter-spacing: 1.3px;font-size: 14px; color: gray;margin-left: 2px">
            <span>We make it easy for you to get in touch with us.</span>
              </p>
          </p>

      
        <div class="contact__form-name">
          {%- assign name_attr = 'contact.form.name' | handle -%}
<!--           <label for="contactFormName">
            {{ 'contact.form.name' | t }} <span class="red">*</span>
          </label> -->
          <input type="text"
                id="contactFormName"
                name="contact[{{ name_attr }}]"
                placeholder="Your {{ 'contact.form.name' | t }}"
                autocapitalize="words"
                value="{% if form[name_attr] %}{{ form[name_attr] }}{% elsif customer %}{{ customer.name }}{% endif %}"
                required="required"
            class="input input1">
        </div>

        <div class="contact__form-email">
<!--           <label for="contactFormEmail">
            {{ 'contact.form.email' | t }} <span class="red">*</span>
          </label> -->
          <input type="email"
                id="contactFormEmail"
                name="contact[email]"
                placeholder="Your {{ 'contact.form.email' | t }}"
                autocorrect="off"
                autocapitalize="off"
            class="input"
                value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" required="required">
          </div>

          <div class="contact__form-message">
<!--             <label for="contactFormMessage">
            {{ 'contact.form.message' | t }} <span class="red">*</span>
            </label> -->
            <textarea rows="5"
                    id="contactFormMessage"
                    name="contact[body]"
                    placeholder="Your {{ 'contact.form.message' | t }}"
                    required="required">
              {% if form.body %}
                {{ form.body }}
              {% endif %}
            </textarea>

            <div class="contact-form__bottom-content">
              {{ bottom_form_content }}
            </div>
<div class="make_button">
            <input type="submit" class="global-button global-button1 global-button--primary" value="{{ 'contact.form.send' | t }}" />
          </div>
          </div>
      {% endform %}
    </div>
    <div class="col-md-4 ko-colm">
      <div class="ko-address">
            <h1>KODIAK COOLERS HEADQUARTERS</h1>
            <span>Green Bay Wisconsin, 54304</span><br>
            <span class="sp-mg">United States</span>
          </div>
          <div class="ko-call">
            <h1>CALL US</h1>
            <p>Phone: 800-655-0926</p>
          </div>
          <div class="ko-email">
            <h1>EMAIL US</h1>
            <p>info@kodiak-coolers.com</p>
          </div>
    </div>
</div>
  </div>
</div>
</section>
