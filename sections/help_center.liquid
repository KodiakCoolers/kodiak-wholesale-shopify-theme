    text-align: left;
    padding: 0;
}
  .content_panel p {
    font-size: 14px;
    line-height: 1.6em;
    letter-spacing: 0px;
    color: #000;
    text-transform: none;
    font-weight: 400;
    margin-bottom: 0;
}
.only_img {
    width: 35%;
    margin-left: 3rem;
    margin-right: -4rem;
}
  .col-md-6.help_center {
    padding-bottom: 2rem;
}

  

@media only screen and (max-width:767px){
  .help_img {
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: auto;
    text-align: center;
}
  .second_help {
    width: 100%;
}
  .help_btn_res a {
    padding: 8px 100px!important;
    width: 100%;
}
  .content_panel p {
    margin-bottom: 0;
}
  .help_btn_res {
    margin-top: -12px;
    margin-bottom: -10px;
}
  .only_img {
    width: 35%;
    margin-left: 6rem;
    margin-right: -6rem;
