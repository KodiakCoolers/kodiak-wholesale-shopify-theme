      <a href="{{ collection.url }}" class="filter-pill {% unless current_tags.size > 0 %}active{% endunless %}">All Products</a>
      {% assign pills = 'Tumblers|Water Bottles|Can Coolers|Travel Mugs|Wine Cups|Coffee Mugs' | split: '|' %}
      {% for pill in pills %}
