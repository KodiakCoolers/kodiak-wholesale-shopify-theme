<section class="section">
  <div class="test  container content">
    <div
      class="
        one-whole
        column
        collection_nav
      "
    >
      {% comment %}<h1>{{ 'customer.login.title' | t }}</h1>{% endcomment %}

      <div class="feature-divider"></div>
    </div>

    <div
      class="
        three-eighths
        columns
        medium-down--one-whole
        offset-by-five
        is-hidden-offset-mobile-only
        animated
        fadeInUp
      "
      id="recover-password"
      style="display: none;"
    >
      {% comment %}<h4>{{ 'customer.recover_password.title' | t }}</h4>{% endcomment %}
      <h4>Reset your password</h4>
      {% form 'recover_customer_password' %}
        {% capture recover_password_error %}
          {{ form.errors | default_errors }}
        {% endcapture %}

        {{ recover_password_error }}

        {% assign reset_success = form.posted_successfully? %}

        <div id="recover_email">
          <p>
            <em class="note">{{ 'customer.recover_password.subtext' | t }}</em>
          </p>
          <label for="email">{{ 'customer.recover_password.email' | t }}</label>
          <input
            type="email"
            placeholder="Email"
            value=""
            size="30"
            name="email"
            id="recover-email"
            autocorrect="off"
            autocapitalize="off"
          >
        </div>

        <div class="action_bottom">
          <input
            class="
              global-button
              global-button--primary
            "
            type="submit"
            value="{{ 'customer.recover_password.submit' | t }}"
          >
          <span class="note">
            {% comment %}{{ 'customer.recover_password.or' | t }}{% endcomment %}
            <a href="#" onclick="hideRecoverPasswordForm()">
              {{ 'customer.recover_password.cancel' | t }}
            </a>
          </span>
        </div>
      {% endform %}
    </div>

    <div
      class="
        three-eighths
        columns
        medium-down--one-whole
        offset-by-five
        is-hidden-offset-mobile-only
        animated
        fadeInUp
      "
      id="login_form"
    >
      <h1>login</h1>
      {% if reset_success %}
        <p>
          <em class="note">{{ 'customer.recover_password.success' | t }}</em>
        </p>
      {% endif %}

      {% form 'customer_login' %}
        {{ recover_password_error }}
        {{ form.errors | default_errors }}

        <label for="customer_email" class="login">{{ 'customer.login.email' | t }}</label>
        <input
          id="customer_email"
          type="email"
          value=""
          placeholder="Email"
          name="customer[email]"
          size="30"
          autocorrect="off"
          autocapitalize="off"
          tabindex="1"
        >

        {% if form.password_needed %}
          {% comment %}
            Customer Account Login


            <small class="right">
              <em>
                <a href="#" onclick="showRecoverPasswordForm()">
                  {{ 'customer.login.forgot_password' | t }}
                </a>
              </em>
            </small>
          {% endcomment %}

          <label for="customer_password" class="login">{{ 'customer.login.password' | t }}</label>
          <input
            class="
              large
              password
            "
            placeholder="password"
            id="customer_password"
            type="password"
            value=""
            name="customer[password]"
            size="16"
            tabindex="2"
          >
        {% endif %}

        <div class="login-input">
          <input
            class="
              global-button
              global-button--primary
            "
            type="submit"
            value="Sign In"
            tabindex="3"
          >
        </div>
        <p class="backtohome"><a href="https://www.kodiak-wholesale.com/">Return to Store</a></p>

        {% unless shop.checkout.guest_login %}
          <p class="right" style="padding-top: 10px;">
            {% comment %}{{ 'customer.login.new_customer_label' | t }}{% endcomment %}
            <a href="{{ routes.account_register_url }}" id="customer_register_link">
              {% comment %}{{ 'customer.login.sign_up_html' | t }}{% endcomment %}
              Create account
            </a>
          </p>
        {% endunless %}
        <small class="right">
          <em>
            <a href="#" onclick="showRecoverPasswordForm()">
              {{ 'customer.login.forgot_password' | t }}
            </a>
          </em>
        </small>
      {% endform %}

      <div class="large--right">
        {% if shop.checkout.guest_login %}
          <span class="or"> {{ 'customer.login.or' | t }} </span>

          {% form 'guest_login' %}
            <input
              class="guest_button"
              type="submit"
              value="{{ 'customer.login.guest_title_html' | t }}"
            >
          {% endform %}
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% section 'newsletter' %}

<script type="text/javascript">
  function showRecoverPasswordForm() {
    document.getElementById('recover-password').style.display = 'block';
    document.getElementById('login_form').style.display='none';
    return false;
  }

  function hideRecoverPasswordForm() {
    document.getElementById('recover-password').style.display = 'none';
    document.getElementById('login_form').style.display = 'block';
    return false;
  }

  if (window.location.hash == '#recover') {
    showRecoverPasswordForm()
  }

  // reset_success is only true when the reset form is
  {% if reset_success %}
    hideRecoverPasswordForm();
  {% endif %}
</script>
