{% comment %} <script
  type="application/json"
  data-section-type="faq"
  data-section-id="{{ section.id }}"
>
</script>

<script type="application/ld+json">
  {% assign faq_blocks = section.blocks | where: "type", "question" %}
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      {% for faq in faq_blocks %}
        {
          "@type": "Question",
          "name": "{{ faq.settings.title | escape }}",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "{{ faq.settings.content | strip_html | escape }}"
          }
        }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]
  }
</script> {% endcomment %}

<section class="section">
  <div
    class="
      container
      main
      content
      has-background
      has-gutter-enabled
    "
  >
    {% if section.settings.title != blank %}
      <div
        class="
          one-whole
          column
          page
        "
      >
        <h2 class="title">
          {{ section.settings.title | escape }}
        </h2>
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        {% if block.type == 'image' %}
          {% assign image = true %}
        {% endif %}
      {% endfor %}
    {% endif %}

    <div
      class="
        {% if image == true %}
          one-half
        {% else %}
          one-whole
        {% endif %}
        medium-down--one-whole
        column
        faq
        faq__column-1
      "
    >
      {% if section.blocks.size > 0 %}
        <dl class="faqAccordion">
          {% for block in section.blocks %}
           
            {% if block.type == "heading" %}
              {% if block.settings.faq_title != blank %}
                <h2 class="title faq--heading">
                  {{ block.settings.faq_title }}
                </h2>
              {% endif %}
            {% endif %}
            {% if block.settings.title != blank %}
              <dt>
                <button data-index={{ forloop.index }}
                  type="button"
                  aria-controls="panel-01"
                 aria-expanded="true" 
                 
                >
                  {{ block.settings.title }}
                </button>
              </dt>
              <dd id="panel-01" aria-hidden="false">
                {{ block.settings.answer }}
              </dd>
            {% endif %}

{% if block.settings.title1 != blank %}
              <dt>
                <button data-index={{ forloop.index }}
                  type="button"
                  aria-controls="panel-01"
                 aria-expanded="true" 
                 
                >
                  {{ block.settings.title1 }}
                </button>
              </dt>
              <dd id="panel-01" aria-hidden="false">
                {{ block.settings.answer1 }}
{% if block.settings.image1 != blank %}
<div class="image-text-products">
    <div class="image-text-rows">
        <div class="image-side">
       
      <img class="lazyload" data-src="{{ block.settings.image1 | img_url:'master' }}" data-srcset="{{ block.settings.image1 | img_url: '200x' }} 200w, 
	  {{ block.settings.image1 | img_url: '300x' }} 300w, 
	  {{ block.settings.image1 | img_url: '400x' }} 400w, 
	  {{ block.settings.image1 | img_url: '500x' }} 500w, 
	  {{ block.settings.image1 | img_url: '600x' }} 600w, 
	  {{ block.settings.image1 | img_url: '1000x' }} 1000w">
      
        </div>
        <div class="side-text">
            

            <div class="rich-text-para">
               {{ block.settings.text_content }}
            </div>
     
        </div>
    </div>
</div>
{% endif %}
              </dd>

{% endif %}
          {% endfor %}
        </dl>
      {% endif %}
    </div>


    {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        {% if block.type == 'image' %}
          <div
            class="
              one-half
              medium-down--one-whole
              column
              faq
              faq--image
              faq__column-2
            "
          >
            {% if block.settings.image != blank %}
              {%
                render 'image-element',
                image: block.settings.image,
                alt: block.settings.image.alt,
                focal_point: block.settings.image.presentation.focal_point,
              %}
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    {% endif %}
  </div>
</section>

