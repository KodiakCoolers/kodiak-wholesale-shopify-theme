<style>
.specs_image_wrapper img{
    height: {{ section.settings.main_image_height }};
  }
</style>
<div data-id="id-match" class="Product-questions-dropdown hide-mob">Product Specefications <i class="arrow down"></i></div>
<div data-id="id-match" class="specification tab_content" id="{{ section.settings.custom_id }}" style="background-color: {{ section.settings.specs-background-color }};margin-top: 0px;margin-bottom: 0px;">
   <div class="specs-1">
     <div class="specs-outer">
      <div class="specs_content_wrapper">
         <div class="specs_main_head" style="color:{{ section.settings.specs-head-color }}">{{ section.settings.heading }}</div>
         <div class="specs-inner">
            <div class="specs">
              {% for block in section.blocks %}
                  <div class="specs-content-block">
                    {% if block.settings.specs-content-head !=blank %}
                     <p class="specs-content-head" style="color:{{ block.settings.specs-content-head-color }}">{{ block.settings.specs-content-head }}</p>
                    {% endif %}
                    {% if block.settings.specs-content-title !=blank %}
                     <h4 class="specs-content-bold-text" style="color:{{ block.settings.specs-bold-text-color }}">{{ block.settings.specs-content-title }}</h4>
                    {% endif %}
                     {% if block.settings.specs-content-text !=blank %}
                      <p class="specs-content-text" style="color:{{ block.settings.specs-content-color }}">{{ block.settings.specs-content-text }}</p>
                     {% endif %}
                 </div>
              {% endfor %}
            </div>
            <div class="specs_inner_image">
              <img src="{{ section.settings.inner_image |img_url:'150x'}}">
            </div>
         </div>
     </div>
   </div></div>
   <div> 
      <div class="specs_image_wrapper">
        <img src="{{ section.settings.main_image |img_url:'master'}}"> 
     </div>
   </div>
</div>
{% schema %}
  {
    "name": "specification",
    "settings": [
        {
          "type":"text",
          "id":"custom_id",
          "label":"Custom ID"
       },
       {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Measurements & specs"
       },
       {
          "type":"image_picker",
          "id":"inner_image",
          "label":"Inner image"
       },
       {
          "type":"image_picker",
          "id":"main_image",
          "label":"main image"
       },
       {
          "type":"text",
          "id":"main_image_height",
          "label":"main image height",
          "default":"400px"
       },
        {
          "id": "specs-background-color",
          "type": "color",
          "label": "Background color",
          "default":"#F1F1F1"
        },
        {
          "id": "specs-head-color",
          "type": "color",
          "label": "Specification Main Heading Color",
          "default":"#273242"
        }
    ],
    "blocks": [
    {
      "type": "content",
      "name": "content",
      "settings": [
        {
          "id": "specs-content-head",
          "type": "text",
          "label": "Specs Head"
        },
        {
          "id": "specs-content-title",
          "type": "text",
          "label": "Specs title"
        },
        {
          "id": "specs-content-text",
          "type": "text",
          "label": "Specs content"
        },
        {
          "id": "specs-content-head-color",
          "type": "color",
          "label": "Specification Heading Color",
          "default":"#273242"
        },
        {
          "id": "specs-content-color",
          "type": "color",
          "label": "Specification Content Color",
          "default":"#273242"
        },
        {
          "id": "specs-bold-text-color",
          "type": "color",
          "label": "Specification Bold Content Color",
          "default":"#273242"
        }
      ]
    }
    ],
    "presets":[
        {
          "name": "specification"
        }
    ]
  }
{% endschema %}

