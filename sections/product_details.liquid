<div class="product__details wrapper">
  <div class="product_technique_how_order">
      <div class="left_Section">
        
        <div class="heading_subheading">
          <div class="technique_heading">
             {{ section.settings.heading1 }}
          </div>
          <div class="technique_subheading">
            Laser Engraved Design
          </div>
        </div>
        
        <div class="heading_subheading">
          <div class="technique_heading">
             {{ section.settings.heading2 }}
          </div>
          <div class="technique_subheading">{{ section.settings.sub_heading2 }}
            
          </div>
        </div>
        
        <div class="heading_subheading">
          <div class="technique_heading">
              {{ section.settings.heading3 }}
          </div>
          <div class="technique_subheading pro_description">
             <div class="first_show_desc">{{ product.description | truncate: 200 }}</div>
            <div class="first_hide_desc">{{ product.description }}</div>
             <div class="pro_read_more">Read More</div>
            <div class="pro_less_more">Less</div>
          </div>
        </div>
        
    </div>
    <div class="right_Section">
      <div class="how_to_order">{{ section.settings.heading }}</div>
      <div class="order_icon_texts">
        {% for block in section.blocks %}
          <div class="icon_heading_sub">
             <div class="order-icon_img">{% if block.settings.img %}<img src="{{ block.settings.img | img_url:'master' }}">{% endif %}</div>
             <div class="order-icon-cont">
               <div class="icon_content_head">{{ block.settings.new_heading }}</div>
               <div class="icon-content-subhead">{{ block.settings.content }}</div>
             </div>
          </div>
        {% endfor %}        
      </div>

          <div class="product_details_upload_logo">
            {% if section.settings.logoicon %}<div class="upload_logo"><img src="{{ section.settings.logoicon | img_url:'master' }}"></div>{% endif %}
            <div class="upload_load_text">
              {{ section.settings.logo_upload_text }}
            </div>
          </div>
      
    </div>
  </div>
</div>
