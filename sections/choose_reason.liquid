<section class="main_reasons">
  <div class="container reasons_que">
    <div class="row d-flex justify-content-center text-center reasons">
      {% for block in section.blocks %}
        {% if block.type == 'header' %}
          {% if block.settings.heading != blank %}
            <h1 class="headings_reasons">{{ block.settings.heading }}</h1>
      <div class="rea_new_hr"></div>
          {% endif %}
        {% endif %}

        {% if block.type == 'reasons' %}
          <div class="col-md-6 text-left-reasons">
            <div class="quality_reasons">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | img_url:'200px' }}">
              {% endif %}

              <div class="ques_reasons">
<div class="icon_content">
  <div class="icon_content-image">
                  {{ block.settings.content_image }}
                </div>
   <div class="icon_content-hed">{{ block.settings.heading }}</div>
                  <div class="icon_content-cont">{{ block.settings.content }}</div>
                 
                
              </div>

              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    {% if section.settings.bt_text != blank %}
      <div class="btn_resource_ser">
        <a href="{{ section.settings.link }}">{{ section.settings.bt_text }}</a>
      </div>
    {% endif %}
  </div>
</section>
{% schema %}
{
  "name": "Choose_Reasons",
  "settings": [
 {
          "type":"url",
          "id":"link",
          "label":"Add button link"
        },
        {
          "type":"text",
          "id":"bt_text",
          "label":"Add button text"
        }
  ],
      "blocks":[
      {
      "name": "Header",
      "type": "header",
      "settings": [
          {
    "type" : "text",
    "id" : "heading",
    "label" : "Hading"
         },
        {
    "type" : "text",
    "id" : "heading2",
    "label" : "Hading"
         }
    ]
    },
        {
         "name": "reasons",
      "type": "reasons",
      "settings": [
          {
    "type" : "image_picker",
    "id" : "image",
    "label" : "Hero Image"
         },
            {
        "type" : "text",
    "id" : "content",
    "label" : "Add Description Content"
  },
        {
    "type" : "text",
    "id": "heading",
    "label" : "Add Heading"
  },
        {
          "type":"html",
          "id":"content_image",
          "label":"add html"
        }
      ]
        }
  ],
  "presets": [
    {
        "name": "Choose_Reasons"
    }
  ]
}
{% endschema %}

<style>
   
/* new css */
  .container.reasons_que {
    justify-content: center;
    width: 80%;
}
h1.headings_reasons {
    text-align: center;
    justify-content: center;
    font-size: 35px;
    line-height: 45px;
    color: #fff;
  margin-top: 15px;
}
  .rea_new_hr {
    border-top:1px solid #a2a2a2;
    width: 60%;
    margin: 0 auto;
    padding-bottom: 50px;
}

  .quality_reasons {
    display: flex;
    padding: 12px 0;
}
.icon_content {
    text-align: left;
  padding-left: 20px;
  padding-right: 20px;
}
.icon_content-hed {
    color: #fff;
    font-size: 20px;
    font-weight: 800;
  line-height: 30px;
}
  .icon_content-cont {
    color: #fff;
}
  .quality_reasons img {
    width: 80px;
    height: 70px;
}
section.main_reasons {
    background: #36455b;
}
  .icon_content-cont a {
    color: #0c63e4ad;
}

@media only screen and (max-width:767px){
  .container.reasons_que {
    width: 100%;
  }
h1.headings_reasons {
    font-size: 20px;
    line-height: 30px;
  padding-bottom:5px;
  width: 96%;
  margin-bottom:0;
}
section.main_reasons .col-md-6.text-left-reasons {
    padding: 20px;
}
  .rea_new_hr {
    width: 50%;
    padding-bottom: 20px;
}
.quality_reasons {
    padding: 0 0;
}
  
}  
  
</style>

