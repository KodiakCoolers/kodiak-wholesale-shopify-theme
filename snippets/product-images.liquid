      <img class="lazyload" data-src="{{ settings.testimonialimg | img_url:'master' }}" data-srcset="{{ settings.testimonialimg | img_url: '200x' }} 200w, {{ settings.testimonialimg | img_url: '300x' }} 300w, {{ settings.testimonialimg | img_url: '400x' }} 400w, {{ settings.testimonialimg | img_url: '500x' }} 500w, {{ settings.testimonialimg | img_url: '600x' }} 600w, {{ settings.testimonialimg | img_url: '1000x' }} 1000w"   loading="lazy" style="width:{{ settings.imgwidth }}px;">
