<div class="new_faq_section">
  <div class="new_faq_section content container">
    <h3 class="new_faq_section_heading">{{ section.settings.heading }}</h3>
    <div class="new_faq_section_inner">
      <div class="faq_row_1">
        {% for block in section.blocks %}
          {% if block.settings.faq_question1 != blank %}
            <div>
              <div>
                <h4 class="question">{{ block.settings.faq_question1 }}</h4>
              </div>
              <div>
                <p class="answer">{{ block.settings.faq_answer1 }}</p>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      <div class="faq_row_2">
        {% for block1 in section.blocks %}
          {% if block1.settings.faq_question2 != blank  %}
          <div>
            <div>
              <h4 class="question">{{ block1.settings.faq_question2 }}</h4>
            </div>
            <div>
              <p class="answer">{{ block1.settings.faq_answer2 }}</p>
            </div>
          </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% schema %}
 {
   "name": "new faq section",
   "settings": [
       {
         "type":"text",
         "id":"heading",
         "label":"Title"
       }
    ],
   "blocks":[
        {
            "type": "faq_1",
            "name": "faq row 1",
            "settings": [
              {
                "id": "faq_question1",
                "type": "text",
                "label": "faq question"
              },
              {
                "id": "faq_answer1",
                "type": "text",
                "label": "faq answer"
              }
            ]
          },
          {
            "type": "faq_2",
            "name": "faq row 2",
            "settings": [
              {
                "id": "faq_question2",
                "type": "text",
                "label": "faq question"
              },
              {
                "id": "faq_answer2",
                "type": "text",
                "label": "faq answer"
              }
            ]
          }
    ],
  "presets": [
  {
    "name": "new faq section"
  }
]
 }
{% endschema %}

